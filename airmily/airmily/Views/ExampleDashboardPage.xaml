<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="airmily.Views.ExampleDashboardPage"
             xmlns:uikit="clr-namespace:UXDivers.Artina.Grial;assembly=UXDivers.Artina.Grial"
	           xmlns:artina="clr-namespace:UXDivers.Artina.Shared;assembly=UXDivers.Artina.Shared"
	           xmlns:views="clr-namespace:airmily.Views;assembly=airmily"
	           Title = "{Binding Title}">

  <artina:GridOptionsView
			ColumnCount="3"
			RowCount="3"
			ColumnSpacing="1"
			RowSpacing="1"
			Padding="0"
			VerticalOptions="FillAndExpand"
			BackgroundColor="#e7ebed"
			ItemsSource="{Binding Items}">
    <artina:GridOptionsView.ItemTemplate>
      <DataTemplate>
        <views:ExampleDashboardItemTemplate
            ShowBackgroundImage="false"
            ShowBackgroundColor="false"
            ShowiconColoredCircleBackground="true"
            TextColor="Black" />
      </DataTemplate>
    </artina:GridOptionsView.ItemTemplate>
  </artina:GridOptionsView>
</ContentPage>